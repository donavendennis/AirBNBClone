@page
@model AirBNBClone.Pages.AdminPages.Amenities.IndexModel
@{
}
<h3>Delete Existing Amenity</h3>
@foreach (var obj in Model.objAmenityList)
{
    <div>
        <p>Amenity <b>@obj.Name</b> (ID <b>@obj.Id</b>): <b>@obj.Description</b>.</p>
        <form method="post" asp-page-handler="Delete">
            <input asp-for="Id" type="hidden" value="@obj.Id" />
            <input type="submit" value="Delete" onclick="return confirm('Are you sure you want to delete this?')" />
        </form>
    </div>
}

<h3>Add new Amenity</h3>
<form method="post" asp-page-handler="Add">
    <input asp-for="Name" type="text" placeholder="Name" />
    <input asp-for="Description" type="text" placeholder="Description" />
    <input type="submit" value="Add" onclick="return confirm('Are you sure you want to add this?')" />
</form>