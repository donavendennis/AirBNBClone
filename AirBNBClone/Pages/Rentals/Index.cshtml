@page
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model AirBNBClone.Pages.Rentals.IndexModel
@{
}
<div class="container">
    <div class="row pt=4">
        <!--Start Row-->
        <div class="col-6">
            <!--50% of row-->
            <h2 class="text-primary">
                My Rentals
            </h2>
        </div><!-- End 1st Column-->
        <div class="col-6 text-end">
            <a asp-page="Upsert" asp-route-id="0" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Add A Rental
            </a>
        </div> <!--End 2nd Column-->
    </div> <!--End Row-->
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>Rental Title</th>
                <th>Address</th>
                <th>City</th>
                <th>State</th>
                <th>Zip</th>
                <th>&nbsp;</th>
            </tr>
        </thead>
        <tbody>
        <!--Create a loop here-->
            @foreach (var obj in Model.objRentalList)
        {
            <tr>
                <td width="30%">@obj.Title</td>
                <td width="30%">@obj.Address</td>
                <td width="10%">@obj.City</td>
                <td width="10%">@obj.State</td>
                <td width="10%">@obj.Zip</td>
                <td width="10%">
                    <div class="w-75 btn-group" role="group">
                        <a asp-page="Upsert" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a asp-page="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                            <i class="bi bi-trash-fill"></i> Delete
                        </a>
                    </div>
                </td>

            </tr>
        }
        <!--End Loop Here-->
        </tbody>
    </table>
</div> <!--Close Container-->
