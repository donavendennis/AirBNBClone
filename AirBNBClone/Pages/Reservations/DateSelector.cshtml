@page
@model AirBNBClone.Pages.Reservations.DateSelectorModel
@{
}

<div class="container">
    <main>
        <div class="py-5 text-center">
            <h2>Reservation</h2>
            <p class="lead">When would you like to reserve for?</p>
        </div>
        <p>Due to dynamic pricing, you must select price before proceeding.</p>
<h2>Please select date</h2>
<form method="post">
    <div class="col-sm-6">
        <div class="col-auto mx-1">
            <input asp-for="StartDate" type="date" class="form-control mb-2" name="StartDate" placeholder="Start Date" />
        </div>
    </div>
    <div class="col-sm-6">
        <div class="col-auto mx-1">
            <input asp-for="EndDate" type="date" class="form-control mb-2" name="EndDate" placeholder="End Date" />
        </div>
    </div>
    <input asp-for="Id" type="hidden" value="@Model.Id" />
    <!--Submit button-->
    <div class="col-auto mx-1">
        <button type="submit" class="btn btn-primary mb-2">Submit</button>
</form>

