<div class="row" data-masonry='{"percentPosition": true }'>
    @foreach (var obj in Model.objRentalList)
    {
        <div class="col-sm-6 col-lg-4 mb-4">

            <div class="card">

                <svg class="bd-placeholder-img card-img-top" width="100%" height="300" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Image cap" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title><rect width="100%" height="100%" fill="#868e96" /><text x="50%" y="50%" fill="#dee2e6" dy=".3em">Image cap</text></svg>
                <div class="card-body">
                    <h5 class="card-title">@obj.Title</h5>
                    <div class="card-text ">
                        <strong>State:</strong><p>@obj.State</p>
                        <strong>Zip:</strong><p>@obj.Zip</p>
                        <strong>City:</strong><p>@obj.City</p>
                        <strong>Address:</strong><p>@obj.Address</p>
                        <strong>Owner:</strong><p>@obj.OwnerId</p>
                        <strong>Phone:</strong><p>@obj.Phone</p>
                    </div>
                    <a href="/RentalDetails" class="btn btn-primary">View Details</a> <!--You will need to enter in the ID here!!-->
                    <a href="#" class="btn btn-secondary">Contact Owner</a>
                </div>

            </div>

        </div>
    }
</div>